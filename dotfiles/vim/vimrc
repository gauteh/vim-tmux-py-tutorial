  let g:grepper = { 'tools' : [ 'rg', 'rgi', 'grep', 'git' ], 'simple_prompt' : 1 }
  let g:grepper.rgi = { 'grepprg' : 'rg --vimgrep --no-heading -i --sort=modified' }
  let g:grepper.rg = { 'grepprg' : 'rg --vimgrep --no-heading --sort=modified' }

  " Use ripgrep over Grep
