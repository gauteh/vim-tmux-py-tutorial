function! LazyPut() abort
  let comment = input("Commit message: ")
  if strlen(comment) == 0
    let comment = "... empty ..."
  endif

  redraw
  echom "Pushing '" . comment . "' .."

  Git pull
  Git add .
  exe 'Git commit -a -m "' .  comment . '"'
  Git push
endfunction

nnoremap <silent> <leader>pp :call LazyPut()<CR>
